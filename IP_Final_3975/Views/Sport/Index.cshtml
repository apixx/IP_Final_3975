@model IEnumerable<IP_Final_3975.Models.Sport>
@{
    ViewData["Title"] = "Index";
}

<h1>Sports List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SportName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (Sport item in @Model)
        {
            <tr>
                <td>@Html.ActionLink(item.SportName, "Index", "Players", new { id = item.SportId })</td>
                <td>@item.Description</td>
            </tr>
        }
    </tbody>
</table>

